{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "modules.d.ts"],
  "exclude": ["node_modules"]
}